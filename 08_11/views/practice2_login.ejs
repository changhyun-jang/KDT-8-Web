<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <title>Document</title>
  </head>
  <script>
    function submit_info() {
      const form = document.forms["info"];
      const data = {
        id: form.identity.value,
        pwd: form.pwd.value,
      };
      axios({
        method: "POST",
        url: "/makeSession",
        data,
      }).then((result) => {
        window.location.href = "/";
      });
    }
  </script>
  <body>
    <form name="info">
      id <input type="text" id="identity" /><br />
      pwd<input type="password" id="pwd" /><br />
      <button type="button" onclick="submit_info()">로그인</button>
    </form>
  </body>
</html>
