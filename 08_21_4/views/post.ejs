<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <h1>POST 실습</h1>
    <form name="login_info">
      <label for="username">아이디</label>
      <input type="text" id="username" required />
      <br />
      <label for="password">패쓰워드</label>
      <input type="password" id="password" required />
      <br />
      <button type="button" onclick="login()">로그인</button>
    </form>
    <br />
    <div class="result"></div>
    <script>
      async function login() {
        const form = document.forms["login_info"];
        const resultMent = document.querySelector(".result");
        const data = {
          id: form.username.value,
          pw: form.password.value,
        };
        try {
          const response = await axios({
            method: "POST",
            url: "/resultPost",
            data,
          });
          resultMent.innerText = `${response.data.id}님 께서 로그인되셨습니다.`;
        } catch (error) {
          console.log("에러", error);
        }
      }
    </script>
  </body>
</html>
